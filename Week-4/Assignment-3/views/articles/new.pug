extends ../layouts/boilerplates.pug

block content
    .card-body
        h5.card-title.mb-3 New Article 
        form#login.validated-form(action='/articles' method='POST')
            // title
            .mb-3
                label.form-label(for='email') title
                input#email.form-control(type='text' name='article[title]' autofocus='' required='')
            // content
            .mb-3
                label.form-label(for='password') content
                input#password.form-control(type='textarea' name='article[content]' required='')
            button.btn.btn-success.col-12.mt-2 Create