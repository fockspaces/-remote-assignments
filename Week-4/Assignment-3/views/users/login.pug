extends ../layouts/boilerplates.pug

block content
  .row 
    h2.text-center Login
    .col-6.offset-3
      form#login.validated-form(action='/user/login' method='POST')
        // email
        .mb-3
          label.form-label(for='email') email
          input#email.form-control(type='text' name='user[email]' autofocus='' required='')
        // password
        .mb-3
          label.form-label(for='password') password
          input#password.form-control(type='password' name='user[password]' required='')
          button.btn.btn-success.col-12.mt-2 Submit
        a.btn.btn-primary(href=`/`) Return  
