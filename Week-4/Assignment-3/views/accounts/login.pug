extends ../layouts/boilerplates.pug

block content
  .card-body
    h5.card-title.mb-3 Login
    form#login.validated-form(action='/users/login' method='POST')
    // email
    .mb-3
      label.form-label(for='email') email
      input#email.form-control(type='text' name='email' autofocus='' required='')
      .valid-feedback Looks good!
    // password
    .mb-3
      label.form-label(for='password') password
      input#password.form-control(type='password' name='password' required='')
      .valid-feedback Looks good!
    button.btn.btn-success.col-12.mt-2 Login